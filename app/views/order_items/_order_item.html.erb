<div id="<%= dom_id order_item %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= order_item.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price at sale:</strong>
    <%= order_item.price_at_sale %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Discount:</strong>
    <%= order_item.discount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Product:</strong>
    <%= order_item.product_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= order_item.order_id %>
  </p>

</div>
