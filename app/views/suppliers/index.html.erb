<div class="w-full">
  <% content_for :title, "Suppliers" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Suppliers</h1>
    <%= link_to "New supplier", new_supplier_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="suppliers" class="min-w-full">
    <% @suppliers.each do |supplier| %>
      <%= render supplier %>
      <p>
        <%= link_to "Show this supplier", supplier, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
