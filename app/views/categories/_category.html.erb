<div id="<%= dom_id category %>">
  <%= category.name %>
  <%= link_to "Edit this category", edit_category_path(category), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= link_to "Destroy this category", category_path(category), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium", data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </div>
</div>
